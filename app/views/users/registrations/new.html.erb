<div class="background-image">
<div class="new-post-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="new-post-field">
      <%= f.label :name, "ユーザー名" %><br />
      <%= f.text_field :name, autofocus: true, class: "form" %>
    </div>

    <div class="new-post-field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
    </div>

    <div class="new-post-field">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form" %>
    </div>

    <div class="new-post-field">
      <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form" %>
    </div>

    <div class="new-post-button-container">
      <%= f.submit "登録する", class: "form-button" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
</div>
